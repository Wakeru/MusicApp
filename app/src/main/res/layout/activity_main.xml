<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:ignore="back">

    <ImageButton
        android:id="@+id/folder2"
        android:layout_width="91dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/folder"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:text="MixTape 2020"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folder" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:text="Soda Pop"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folder2" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="91dp"
        android:layout_height="88dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="76dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plus" />

    <ImageButton
        android:id="@+id/folder"
        android:layout_width="91dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="76dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/folder" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="91dp"
        android:layout_height="17dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:text="Create new Folder"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="44dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Search..."
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>